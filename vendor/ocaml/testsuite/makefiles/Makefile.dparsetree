.PHONY: default
default:
	@for file in *.ml; do \
	  $(OCAMLC) -dparsetree -c $$file 2>$$file.result >/dev/null || true; \
	done
	@for file in *.reference; do \
	  printf " ... testing '$$file':"; \
	  $(DIFF) $$file `basename $$file reference`result >/dev/null \
          && echo " => passed" || echo " => failed"; \
	done

.PHONY: promote
promote: defaultpromote

.PHONY: clean
clean: defaultclean
	@rm -f *.result

       \vbox to\headheight
        {\vfil \hbox to\headwidth{\rm\normalsize{\@authorhead}\hfil}
               \vskip 4pt
               \hbox to\headwidth{\hrulefill}
        }}
     \let\@evenfoot\@oddfoot}


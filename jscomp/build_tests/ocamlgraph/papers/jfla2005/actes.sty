\def\ps@colloquetitle{\let\@mkboth\@gobbletwo%
     \def\@oddhead{
       \vbox to\headheight
        {\vfil \hbox to\headwidth{\footnotesize \D@teC}
               \vskip 4pt
               \hbox to\headwidth{\hrulefill}
        }}
     \def\@oddfoot{\rm\hfil\thepage\hfil}
     \let\@evenhead\@oddhead
     \let\@evenfoot\@oddfoot}
